#!/bin/sh
cd "${0%/*}" || exit                                # Run from this directory
. ${WM_PROJECT_DIR:?}/bin/tools/RunFunctions        # Tutorial run functions
#------------------------------------------------------------------------------


runApplication blockMesh
runApplication decomposePar

rm log.explicitLaplacianFoam
#rm log.implicitLaplacianFoam
for ((i=0;i<5;i++)) do
#mpirun -np 40 refineMesh -all -parallel -overwrite
runParallel explicitLaplacianFoam
#runParallel implicitLaplacianFoam
mv log.explicitLaplacianFoam log.explicitLaplacianFoam_$((i))
#mv log.implicitLaplacianFoam log.implicitLaplacianFoam_$((i))
done


if false
then    
    runParallel foamToVTK
fi

#------------------------------------------------------------------------------
